{
  "name": "tiny-date-picker",
  "version": "2.4.0",
  "description": "A small, dependency-free date picker",
  "main": "dist/tiny-date-picker.js",
  "scripts": {
    "start": "concurrently \"npm run build -- --watch\" \"npm run serve\"",
    "selenium": "concurrently \"java -jar selenium-server-standalone-3.0.1.jar\" \"npm start\"",
    "serve": "http-server . -c-1 -p 8080",
    "test": "jest",
    "build": "rollup src/index.js --output.format umd --name TinyDatePicker --output.file dist/tiny-date-picker.js",
    "min": "concurrently \"npm run mincss\" \"npm run minjs\"",
    "mincss": "uglifycss tiny-date-picker.css > tiny-date-picker.min.css && echo 'Minified CSS:' && cat tiny-date-picker.min.css | gzip -9f | wc -c",
    "minjs": "uglifyjs dist/tiny-date-picker.js --source-map dist/tiny-date-picker.min.js.map -m -c -o dist/tiny-date-picker.min.js && echo 'Minified JS:' && cat dist/tiny-date-picker.min.js | gzip -9f | wc -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisdavies/tiny-date-picker.git"
  },
  "keywords": [
    "date",
    "picker",
    "date",
    "chooser",
    "calendar"
  ],
  "author": "Chris Davies <ferociousturtle@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chrisdavies/tiny-date-picker/issues"
  },
  "jest": {
    "testRegex": ".*\\.test\\.js$",
    "moduleFileExtensions": [
      "js"
    ]
  },
  "homepage": "https://github.com/chrisdavies/tiny-date-picker#readme",
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "concurrently": "^3.5.0",
    "http-server": "^0.9.0",
    "jest": "^20.0.4",
    "rollup": "^0.49.2",
    "selenium-webdriver": "^3.5.0",
    "uglify-js": "^2.7.5",
    "uglifycss": "0.0.25"
  }
}
